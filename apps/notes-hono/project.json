{
  "name": "notes-hono",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/notes-hono/src",
  "projectType": "application",
  "targets": {
    "build-base": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "apps/notes-hono/dist",
        "format": ["esm"],
        "bundle": true,
        "main": "apps/notes-hono/src/app.ts",
        "tsConfig": "apps/notes-hono/tsconfig.app.json",
        "assets": ["apps/notes-hono/src/assets"],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": { 
          "main": "apps/notes-hono/src/main.ts"
        },
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-base"],
      "inputs": ["{workspaceRoot}/dist/apps/notes-hono"],
      "outputs": ["{workspaceRoot}/dist/apps/notes-hono"],
      "options": {
        "command": "tsc-alias -p apps/notes-hono/tsconfig.app.json"
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/notes-hono/package.json",
        "{workspaceRoot}/dist/apps/notes-hono/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/notes-hono/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build-base"],
      "options": {
        "buildTarget": "notes-hono:build-base",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "notes-hono:build-base:development"
        },
        "production": {
          "buildTarget": "notes-hono:build-base:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/apps/notes-hono"],
      "options": {
        "passWithNoTests": true,
        "env": {
          "NODE_ENV": "test",
          "LOG_LEVEL": "silent"
        }
      }
    }
  },
  "tags": []
}
